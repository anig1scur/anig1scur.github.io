
.tocbot
  overflow: hidden
  position: -webkit-sticky
  position: sticky
  background: #fdfaf6
  top: 1rem
  margin-bottom: 1.6rem
  .toc__content
    border-left: 1px solid #222
    margin: 1.6rem 0 0 1rem
  .toc-list
    padding: 0 0 0 1em
  .toc-link
    text-decoration: none
    &::before
      width: 2px
      left: 1rem

  .is-active-link
    &::before
      background: var(--color-main)


@media screen and (max-width: $L)
  .tocbot
    top: 0.8rem

@media screen and (max-width: $S)
  .tocbot
    position: relative